
<div class="d-flex m-3">
  <div class="p-2 mr-auto"><h2><%= @topic.title %></h2></div>
  <div class="p-3">
    <% if @topic.root? %>
      <%= link_to "Back", root_path, class: "btn btn-outline-primary square" %>
    <% else %>
      <%= link_to "Back", topic_path(@topic.parent_id), class: "btn btn-outline-primary square" %>
  <% end %>
  </div>
</div>

  <%= render 'topic', topics: @topic.children  %>

<br>

<%= link_to "New topic", new_topic_path(parent_id: @topic) %>

<h1>Doc</h1>

<% @topic.documents.each do |doc| %>
  <p><%= doc.name %></p>
  <p><td><%= link_to "Delete Doc", doc, method: :delete, id: "delete_document_#{doc.id}_from_index", data: {confirm: 'Are you sure?' } %></p>
<% end %>
