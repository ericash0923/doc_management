<h1>Topic</h1>



<table>
  <tr>
    <th>Name</th>
    <th>ID</th>
    <th></th>
    <th>Level</th>
    <th></th>
    <th></th>
  </tr>

  <%= render 'topic' %>
  
</table>

<br />

<%= link_to "New topic", new_topic_path(:parent_id => @topic) %>

<div class="row">
  <% @topics.each do |topic| %>
  	<div class="col-md-3 col-sm-4">
  	  <div class="wrimagecard wrimagecard-topimage">
          <a href="<%= topic_path(topic) %>">
            <div class="wrimagecard-topimage_header" style="background-color:rgba(187, 120, 36, 0.1) ">
              <center><i class="fa fa-folder-open-o" style="color:#BB7824"></i></center>
            </div>
            <div class="wrimagecard-topimage_title">
              <h4><%= topic.title %><h4>
            </div>
          </a>
      </div>
    </div>
  <% end %>
</div>




