  <div class="row">
      <%= render 'folder', topics: @admin_topic.children %>
  </div>
  
<br>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Pdf Link</th>
      <th>&nbsp;</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @admin_topic.documents.each do |doc| %>
      <tr>
        <td><%= doc.name %></td>
        <td><%= link_to "Download Doc", doc.attachment_url %></td>
        <td><%= doc.inspect %></td>
        <td><%= button_to "Delete", [:admin, doc], method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure that you wish to delete #{doc.name}?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

