<h3>Folders</h3>

  <div class="row">
      <%= render 'folders', topics: @admin_topic.children %>
  </div>
<br>

<%= link_to 'Edit', edit_admin_topic_path(@admin_topic) %> |

<% if @admin_topic.root? %>
  <%= link_to "Back", admin_path %>
<% else %>
  <%= link_to "Back", admin_topic_path(@admin_topic.parent_id) %>
<% end %>

<% @admin_topic.documents.each do |doc| %>
  <p><%= doc.name %></p>
  <p><td><%= link_to "Delete Doc", doc, method: :delete, id: "delete_document_#{doc.id}_from_index", data: {confirm: 'Are you sure?' } %></p>
<% end %>

