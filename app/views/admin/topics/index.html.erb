<p id="notice"><%= notice %></p>

<h1>Admin Topics</h1>

<table>
  <thead>
    <tr>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_topics.each do |admin_topic| %>
      <tr>
        <td><%= admin_topic.title %></td>
        <td><%= link_to 'Show', admin_topic %></td>
        <td><%= link_to 'Edit', edit_admin_topic_path(admin_topic) %></td>
        <td><%= link_to 'Destroy', admin_topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Admin Topic', new_admin_topic_path %>
