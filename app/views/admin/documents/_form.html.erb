<%= form_for([:admin, @admin_document]) do |f| %>

  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :attachment %><br />
    <%= f.file_field :attachment, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label "Topic" %><br />
    <%= f.collection_select :topic_id, Topic.order(:title), :id, :title, include_blank: true, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.submit "Upload", class: 'btn btn-default'%>
  </div>
<% end %>

